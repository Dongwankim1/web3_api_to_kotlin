    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "request": "attach",
            "name": "Attach to Kotlin App",
            "hostName": "localhost",
            "sourcePaths": ["${workspaceFolder}/src/main/kotlin"],
            "port": 5005 // Gradle의 디버깅 포트와 일치시켜야 함
        },
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Full Debug",
            "projectRoot": "${workspaceFolder}",
            "mainClass": "org.example.AppKt",
            "sourcePaths": ["${workspaceFolder}/src/main/kotlin"],
            "trace": true // 디버깅 로그 활성화
        }
    ]
}